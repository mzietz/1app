#:kivy 1.10.0
#:import factory kivy.factory
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter

<Screen>:
	canvas:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			size: self.size

<PostitButton@Button>:
	width: '50dp'
	height: '50dp'
	background_color: (.99,.99,.99,0)

<Question@Label>:
	font_size: '60sp'
	font_name: 'data/fonts/TYPO_CRAYONM'
	color: 1, 1, 1, 1

<Answer@Label>:
	font_size: '50sp'
	valign: 'top'
	font_name: 'data/fonts/DK Cool Crayon'
	color: 1, 1, 1 ,1

<Uber@Label>:
	font_size: '48sp'
	font_name: 'data/fonts/TYPO_CRAYONM'
	color: 1, 1, 1 ,1

<HorizontalBox@BoxLayout>:
	orientation: 'horizontal'
	size_hint_y: None
	pos_hint: {'top': 1}
	height: '150sp'
	spacing: '20sp'
	padding: '30sp'

<BottomBox@FloatLayout>:
	orientation: 'horizontal'
	size_hint_y: None
	pos_hint: {'top': 0.2}
	height: '150sp'
	spacing: '20sp'
	padding: '50sp'

<QuestionBox@BoxLayout>:
	orientation: 'horizontal'
	size_hint_y: None
	pos_hint: {'top': 1}
	height: '200sp'
	spacing: '20sp'
	padding: '10sp'

<Spacer@BoxLayout>
	size_hint_y: None
	height: '40sp'
	spacing: '20sp'
	padding: '10sp'

##########     HOME      #############

<PageOne>:
	on_touch_down: app.touchdown(args[1])
	on_touch_up: app.touchup_on_pageone(args[1])

	BoxLayout:
	BoxLayout:
		orientation: 'vertical'
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: 'data/pictures/blackboard.png'

		QuestionBox:
			Question:
				text: app.vocab1
		Answer:
			text: app.answer1



<PageTwo>:
	on_touch_down: app.touchdown(args[1])
	on_touch_up: app.touchup_on_pagetwo(args[1])

	id: pagetwo
	BoxLayout:
		orientation: 'vertical'
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: 'data/pictures/blackboard.png'

		QuestionBox:
			Question:
				text: app.vocab2

		Answer:
			text: app.answer2

<VocabFrontPage>:
	on_touch_down: app.touchdown(args[1])
	on_touch_up: app.touchup_on_vocabfrontpage(args[1])

	BoxLayout:
		orientation: 'vertical'
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: root.picture
		Spacer:
		HorizontalBox:

			Uber:
				text: root.text
				text_size: self.size
				halign: 'center'
				valign: 'middle'
		Question:
			text: ""

<HomePage>:
	BoxLayout:
		orientation: 'vertical'
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: root.picture
		HorizontalBox:
			Uber:
				text: root.text
		Spacer:
		
		HorizontalBox:
			PostitButton:
				id: study_button
#				on_press:
#					app.pushedbutton()
				on_release:
					app.go_to_vocabfrontpage()
				width: '100dp'
				height: '100dp'
		        Image:
		            source: 'data/pictures/button_study.png'
			        center_x: self.parent.center_x
        			center_y: self.parent.center_y
		            size: root.study_button_size #250, 250
		            allow_stretch: True

		Spacer:
			height: '40sp'

		HorizontalBox:
			PostitButton:
				id: settings_button
#				on_press:
#					app.pushedbutton()
				on_release:
					app.go_to_settings()
		        Image:
		            source: 'data/pictures/button_settings.png'
			        center_x: self.parent.center_x
        			center_y: self.parent.center_y
		            size: root.settings_button_size #170, 170
		            allow_stretch: True
		            
			PostitButton:
				id: data_button
#				on_press:
#					app.pushedbutton()
				on_release:
					app.go_to_data()
		        Image:
		            source: 'data/pictures/button_data.png'
			        center_x: self.parent.center_x
        			center_y: self.parent.center_y
		            size: root.data_button_size #170, 170
		            allow_stretch: True
		Question:
			text: ""

<SettingsPage>:
	BoxLayout:
	BoxLayout:
		orientation: 'vertical'
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: root.picture

		Uber:
			text: root.text
		BottomBox:
	        Image:
	            source: 'data/pictures/logo512.png'
	            size_hint: (0.5 ,0.5)
				pos_hint: {'x': 0.55, "y": 0.25}
	            allow_stretch: True

#		Image:
#			source: root.listpicture
			
<DataPage>:
	BoxLayout:
	BoxLayout:
		orientation: 'vertical'
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: root.picture
		HorizontalBox:
			Uber:
				text: root.text
		DeckData:
			id:deck

#		Image:
#			source: root.listpicture

<ChunkPage>:
	on_touch_down: app.touchdown(args[1])
	on_touch_up: app.touchup_on_chunkpage(args[1])
	BoxLayout:
	BoxLayout:
		orientation: 'vertical'
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: root.picture

		Uber:
			text: root.text
<DeckData>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<SwipeManager>
