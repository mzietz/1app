#:kivy 1.10.1
#:import factory kivy.factory
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter

<Screen>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
			size: self.size

<Question@Label>:
	font_size: '70sp'
	font_name: 'data/fonts/Typo_PapyrusM'
    color: 0, 0, 0, 1

<Answer@Label>:
	font_size: '50sp'
	font_name: 'data/fonts/Typo_PapyrusM'
    color: 0, 0, 0 ,1

<Uber@Label>:
	font_size: '65sp'
	font_name: 'Lato-Heavy'
    color: 0, 0, 0 ,1

<HorizontalBox@BoxLayout>:
	orientation: 'horizontal'
	size_hint_y: None
	pos_hint: {'top': 1}
	height: '150sp'
	spacing: '20sp'
	padding: '10sp'

<Spacer@BoxLayout>
	size_hint_y: None
	height: '20sp'
	spacing: '20sp'
	padding: '10sp'

##########     HOME      #############

<PageOne>:
    BoxLayout:
        orientation: 'vertical'

        HorizontalBox:
            canvas:
                Color:
                    rgb: 0, .5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Uber:
                text: 'Swipecards'
                halign: 'center'
                valign: 'middle'
		Question:
			text: app.vocab1
		Spacer:
            canvas:
                Color:
                    rgb: 0, .5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size			
		Answer:
			text: app.answer1


<PageTwo>:
	id: pagetwo
	BoxLayout:
		orientation: 'vertical'
        HorizontalBox:
            canvas:
                Color:
                    rgb: 0, .5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Uber:
                text: 'Swipecards'
                text_size: self.size
                halign: 'center'
                valign: 'middle'

		Question:
			text: app.vocab2
		Spacer:
            canvas:
                Color:
                    rgb: 0, .5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size			

		Answer:
			text: app.answer2

<WelcomePage>:
    BoxLayout:
        orientation: 'vertical'
	    canvas.before:
	        Rectangle:
	            pos: self.pos
	            size: self.size
	            source: 'data/pictures/app.png'
        HorizontalBox:

            Uber:
                text: 'Swipecards'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
		Question:
			text: ""

