#:kivy 1.10.0
#:import factory kivy.factory
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter

<Screen>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
			size: self.size

<Question@Label>:
	font_size: '60sp'
	font_name: 'data/fonts/TYPO_CRAYONM'
    color: 1, 1, 1, 1

<Answer@Label>:
	font_size: '50sp'
	valign: 'top'
	font_name: 'data/fonts/DK Cool Crayon'
    color: 1, 1, 1 ,1

<Uber@Label>:
	font_size: '50sp'
	font_name: 'data/fonts/DK Cool Crayon'
    color: 1, 1, 1 ,1

<HorizontalBox@BoxLayout>:
	orientation: 'horizontal'
	size_hint_y: None
	pos_hint: {'top': 1}
	height: '150sp'
	spacing: '20sp'
	padding: '10sp'

<QuestionBox@BoxLayout>:
	orientation: 'horizontal'
	size_hint_y: None
	pos_hint: {'top': 1}
	height: '200sp'
	spacing: '20sp'
	padding: '10sp'

<Spacer@BoxLayout>
	size_hint_y: None
	height: '20sp'
	spacing: '20sp'
	padding: '10sp'

##########     HOME      #############

<PageOne>:
    BoxLayout:
	BoxLayout:
        orientation: 'vertical'
	    canvas.before:
	        Rectangle:
	            pos: self.pos
	            size: self.size
	            source: 'data/pictures/blackboard.png'

		QuestionBox:
			Question:
				text: app.vocab1
		Answer:
			text: app.answer1


<PageTwo>:
	id: pagetwo
	BoxLayout:
        orientation: 'vertical'
	    canvas.before:
	        Rectangle:
	            pos: self.pos
	            size: self.size
	            source: 'data/pictures/blackboard.png'

		QuestionBox:
			Question:
				text: app.vocab2

		Answer:
			text: app.answer2

<WelcomePage>:
    BoxLayout:
        orientation: 'vertical'
	    canvas.before:
	        Rectangle:
	            pos: self.pos
	            size: self.size
	            source: 'data/pictures/app_welcome.png'
        HorizontalBox:

            Uber:
                text: 'Swipecards'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
		Question:
			text: ""


<SwipeManager>
    on_touch_down: app.touchdown(args[1])
    on_touch_up: app.touchup(args[1])
